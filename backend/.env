# Environment Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=super_secret_jwt_key_for_development_only_change_in_production_123456
JWT_EXPIRES_IN=7d

# Database Configuration (SQLite)
DATABASE_URL=./database.sqlite

# Shopify API Configuration (Add your development store credentials)
SHOPIFY_SHOP_DOMAIN=demo-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=demo_access_token
SHOPIFY_API_VERSION=2023-10

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365

# Session Configuration
SESSION_SECRET=session_secret_key_for_development

# Email Configuration (Optional for development)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
